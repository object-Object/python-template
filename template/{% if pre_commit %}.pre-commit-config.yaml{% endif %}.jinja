repos:
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v5.0.0
    hooks:
      - id: trailing-whitespace
      - id: end-of-file-fixer
      - id: check-yaml
{%- if ruff %}
  - repo: https://github.com/astral-sh/ruff-pre-commit
    rev: v{{ ruff_version }}
    hooks:
      - name: ruff-fix
        id: ruff
        args: [--fix, --select=RUF022, --select=I]
      - id: ruff
      - id: ruff-format
{%- endif %}
